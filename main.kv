<Container>:
    display: display
    rows:4
	cols:2
	Label:
		id : aLabel
		size_hint: (.2, None)
		size: 100, 30
		height:40
		font_size: 20
		text: 'A = '
	TextInput:
		id : aValue
		size_hint: (.2, None)
		size: 100, 30
		rows:1
		multiline:False 
		on_text: root.updateA(aValue)
	Label:
		id : bLabel
		size_hint: (.2, None)
		size: 100, 30
		font_size: 20
		text: 'B = '
	TextInput:
		id : bValue
		size_hint: (.2, None)
		size: 100, 30
		rows:1
		multiline:False 
		on_text: root.updateB(bValue)
		
    BoxLayout:
        orientation: "vertical"
        PgcdButton:
			size: 100, 30
            on_release: root.pgcd()
		PpcmButton:
			size: 100, 30
			on_release : root.ppcm()
		PremierButton:
			size: 100, 30
			on_release : root.premier()
		FacteurButton:
			size: 100, 30
			on_release : root.facteurs()
        LeaveButton:
			size: 100, 30
            on_release: root.leave()
